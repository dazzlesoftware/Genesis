{
    "name": "gantry/wordpress",
    "description": "Gantry Framework Library",
    "license": "MIT",

    "require": {
        "php": "^8.2.0",
        "symfony/event-dispatcher": "^7.2.0",
        "symfony/yaml": "^7.2.0",
        "pimple/pimple": "^3.5.0",
        "filp/whoops": "^2.16.0",
        "dazzlesoftware/toolbox": "^1.0.3",
        "erusev/parsedown-extra": "^0.8.1",
        "timber/timber": "^2.3.1",
        "twig/twig": "^3.18.0",
        "scssphp/scssphp": "^2.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5.2"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dazzlesoftware/toolbox"
        }
    ],
    "autoload": {
        "psr-4": {
            "Gantry\\": "src/classes/Gantry"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        },
        "platform": {
            "php": "8.2"
        }
    }
}
